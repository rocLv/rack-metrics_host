<%= content_for :dashboard do %>
<div class="row-fluid append">
    <div class="span12 box">
      <div class="header">Slowest response time</div>
      <div id="slow" class="chart">
        <svg></svg>
      </div>
    </div>
</div>
<div class="row-fluid append">
    <div class="span12 box">
      <div class="header">Highest throughput</div>
      <div id="throughput" class="chart">
        <svg></svg>
      </div>
    </div>
</div>

<script type="text/javascript">
horizontal_bar(<%== @slowest.to_json %>, '#slow svg')
horizontal_bar(<%== @highest_throughput.to_json %>, '#throughput svg')
</script>
<div id="ajax-modal" class="modal hide fade" tabindex="-1">
  <div class="modal-header no-border">
    <strong>Request details</strong>
    <a class="close" data-dismiss=modal>&times;</a>
  </div>
  <div class="modal-body">
  </div>
</div>
<% end %>
<%= render 'dashboard_template' %>