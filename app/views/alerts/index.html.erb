<div class="container">
  <h1>Alerts of <%= @project.name %></h1>
  <div class="row">
    <div class="col-md-3">
      <%= render 'projects/subnav' %>
    </div>
    <div class="col-md-9">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>Active</th>
            <th>Response time treshold (ms)</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @alerts.each do |alert| %>
            <tr>
              <td><%= alert.active %></td>
              <td><%= alert.response_time_treshold %></td>
              <td>
                <%= link_to 'Edit', edit_project_alert_path(@project, alert), class: 'btn btn-default btn-mini' %>
                <%= link_to 'Destroy', project_alert_path(@project, alert), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Alert', new_project_alert_path(@project), class: 'btn btn-primary' %>

    </div>
  </div>
</div>